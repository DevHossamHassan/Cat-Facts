<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCatFact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@android:color/background_light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvCatFactText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/imgButtonShare"
                android:layout_toStartOf="@id/imgButtonShare"
                android:background="@android:color/transparent"
                android:text="@string/tvCatFactTextDummy"
                android:textColor="@android:color/black"/>

            <ImageButton
                android:id="@+id/imgButtonShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_share"
                android:tint="@color/colorAccent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCatFactText"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCatFactIndex"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tvIndexDummy"
                    android:textColor="@color/colorAccent"
                    />

                <TextView
                    android:id="@+id/tvCatFactLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tvCatFactLength"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>